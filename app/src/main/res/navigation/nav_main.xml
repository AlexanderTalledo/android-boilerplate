<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="android.apps.alexta.boilerplate.ui.main.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_details_screen"
            app:destination="@id/homeDetailsFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeDetailsFragment"
        android:name="android.apps.alexta.boilerplate.ui.main.home.details.HomeDetailsFragment"
        android:label="HomeDetails"
        tools:layout="@layout/fragment_home_details" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="android.apps.alexta.boilerplate.ui.main.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

</navigation>